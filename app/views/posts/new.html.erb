<h1>画像投稿フォーム</h1>
<%= form_with model: @post do |f| %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>説明</h4>
  <%= f.text_area :sentence %>
  <%= f.submit '投稿' %>
  <div class="form-group">
    <label>Category</label>
    <%= f.text_field :category,class: 'form-control post_category' %>
  </div>
<% end %>
